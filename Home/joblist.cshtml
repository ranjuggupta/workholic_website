    @inject IHttpContextAccessor HttpContextAccessor;
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    var loginId = HttpContextAccessor.HttpContext.Session.GetString("UserType");
}
    @model Joddetails


<!DOCTYPE html>
<html lang="en">

<head>
