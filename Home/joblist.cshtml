    <link href="~/css/style.css" rel="stylesheet">
    <style>
        .job-item {
            display: block;
            margin-bottom: 10px;
        }

        .hidden {
            display: none;
        }

        #tab-1 {
            max-height: 500px; /* Set a maximum height (adjust as needed) */
